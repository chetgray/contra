<div class="container">
<div class="row"><div class="col-sm-2"></div><h2 class="col-sm-10">Sign Up</h2></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p class="row field">
    <P class="col-sm-2 contra-label">Email:</p> 
    <%= f.email_field :email, autofocus: true, class: "col-sm-6" %>
    <p class="col-sm-4 understated">e.g. 'jane@gmail.com'</p>
  </p>

  <p class="row field">
    <P class="col-sm-2 contra-label">Name:</p> 
    <%= f.text_field :name, class: "col-sm-6" %>
    <p class="col-sm-4 understated">e.g. 'Cary Ravitz'</p>
  </p>

  <p class="row field">
    <P class="col-sm-2 contra-label">Password:</p> 
    <%= f.password_field :password, autocomplete: "off", class: "col-sm-6" %>
    <% if @minimum_password_length %>
    <p class="col-sm-4 understated"><%= @minimum_password_length %> characters minimum</p>
    <% end %>
  </p>

  <p class="row field">
    <p class="col-sm-2 contra-label">Again:</p> 
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-sm-6" %>
    <p class="col-sm-4 understated">always two, there are</p>
  </p>

  <p class="row actions">
    <p class="col-sm-2"></p>
    <%= save_submit_button_html "Sign Up", {class: "col-sm-2"} %>
  </p>
<% end %>


</div>
