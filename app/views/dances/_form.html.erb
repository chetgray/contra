
  <%# Layout the editor in a twelve-column grid. If we've got plenty
  of space, then labels take the left column. If space is tight, they
  take the two leftmost columns.  %>

  <% debug_figure_json = true %>

  <div class="container"  ng-app="contra">
    <%= form_for(@dance) do |f| %>
      <% if @dance.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@dance.errors.count, "error") %> prohibited this dance from being saved:</h2>
      
        <ul>
          <% @dance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

<% if params[:copy_dance_id] then
     copy_dance = Dance.find(params[:copy_dance_id])
   else
     copy_dance = nil
   end 
%>

  <% if copy_dance then %>
  <div class="row">
    <div class="col-xs-12">Composing a variation of <strong><%= copy_dance.title %></strong></div>
  </div>
  <% end %>

  <div class="row field">
    <%= f.text_field :title, {class: "dance-title-edit col-xs-12", value: copy_dance ? "#{copy_dance.title} variation" : "Untitled"} %>
  </div>
  <div class="row field">
    <%= f.text_field :choreographer_name,
        {class: "col-xs-12 col-sm-6", id: "choreographer-autocomplete", placeholder: "Choreographer"}.
        merge(copy_dance ? {value: copy_dance.choreographer.name} : {}) %>
    <%= f.text_field :start_type,
        {class: "col-xs-12 col-sm-6", id: "start-type-autocomplete", placeholder: "Formation"}
        .merge(copy_dance ? {value: copy_dance.start_type} : {}) %>
    <script>
      $( "#choreographer-autocomplete" ).autocomplete({
        source: <%= a_to_safe_str(Choreographer.all.map &:name) %>,
        autoFocus: true,
        minLength: 0
      });
      $( "#start-type-autocomplete" ).autocomplete({
        source: ["improper","Becket","Becket ccw","four face four","square dance","indecent"],
        autoFocus: true,
        minLength: 0
      });
    </script>
  </div>

<%# ============================ new figure editors ==================== %>

  <div ng-controller="FiguresController as figures" class="row" id="figures">
    <div class="display:none"
         ng-init="figures.arr=defaultFigures(<%= 
                  if copy_dance 
                  then copy_dance.figures_json 
                  else @dance.figures_json 
                  end %>)"></div>
    <div class="col-xs-12 col-md-6"> <%# list figures %>

      <!-- <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="true" ng-change="user_changed_parameter(figure,$index)" /> -->

      <div ng-repeat="figure in figures.arr"
           ng-class="styleForBeats(sumBeats(figures.arr,$index))">
        <label>
          <input type="radio" ng-model="edit_index_box[0]" name="edit_index" ng-value="$index" /> 
          {{figure_html_readonly(figures.arr[$index])}}
        </label>
      </div>
    </div><%# list figures %>
    <div class="col-xs-12 col-md-6"> <%# edit figure %>
      <div ng-repeat="figure in editable_figures(figures)">
        <span>{{$index+1}}</span>
        <br />
        <select class="move_edit" ng-model="figure.move"
                ng-options="m for m in moves()"
                ng-change="user_changed_move(figure)">
        </select>
        <span ng-repeat="p in parameters(figure.move)">
          <br />
          <span ng-init="set_if_unset(figure.parameter_values, $index, p.value)">
            <!-- ng-init="$index in figure.parameter_values || p.value" -->
            {{parameter_glue(figure.move, $index)}}
            <span ng-if="p.ui == chooser_boolean">
              <label>{{p.name}}
                <input type="checkbox" class="balance_edit" 
                       ng-model="figure.parameter_values[$index]"
                       ng-change="user_changed_parameter(figure,$index)"/></label>
            </span>
            <span ng-if="p.ui == chooser_beats">
              <label>
                <select
                   class="beat_edit" ng-model="figure.parameter_values[$index]" 
                   ng-options="b for b in [8,16,0,1,2,3,4,6,8,10,12,14,16,20,24,32,48,64]"
                   ng-change="user_changed_parameter(figure,$index)">
                </select>
                {{p.name}}
              </label>
            </span>

            <span ng-if="p.ui == chooser_spin">
              <label>clockwise <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="true" ng-change="user_changed_parameter(figure,$index)" /></label> /
              <label>ccw <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="false" ng-change="user_changed_parameter(figure,$index)"/></label>
            </span>
            <span ng-if="p.ui == chooser_left_right_spin"> 
              <label>to the</label>
              <label>left  <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="true" ng-change="user_changed_parameter(figure,$index)" /></label> /
              <label>right <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="false" ng-change="user_changed_parameter(figure,$index)" /></label>
            </span>
            <span ng-if="p.ui == chooser_right_left_hand">
              <label>left  <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="false" ng-change="user_changed_parameter(figure,$index)"/></label> /
              <label>right <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="true" ng-change="user_changed_parameter(figure,$index)" /></label>
              <label>hand</label>
            </span>
            <span ng-if="p.ui == chooser_right_left_shoulder">
              <label>left  <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="false" ng-change="user_changed_parameter(figure,$index)"/></label> /
              <label>right <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="true" ng-change="user_changed_parameter(figure,$index)" /></label>
              <label>shoulder</label>
            </span>

            <span ng-if="p.ui == chooser_side">
              <label>left  <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="true" ng-change="user_changed_parameter(figure,$index)"/></label> /
              <label>right <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="false" ng-change="user_changed_parameter(figure,$index)" /></label>
              <label>side</label>
            </span>

            <span ng-if="p.ui == chooser_revolutions">
              <select ng-model="figure.parameter_values[$index]"
                      ng-options="degreesToRotations(a) for a in anglesForMove(figure.move)" ng-change="user_changed_parameter(figure,$index)">
              </select>
            </span>
            <span ng-if="p.ui == chooser_places">
              <select ng-model="figure.parameter_values[$index]"
                      ng-options="degreesToPlaces(a) for a in anglesForMove(figure.move)"
                      ng-change="user_changed_parameter(figure,$index)">
              </select>
            </span>

            <span ng-if="p.ui == chooser_dancers">
              <select ng-model="figure.parameter_values[$index]"
                      ng-change="user_changed_parameter(figure,$index)">
                <option value="everybody">everybody</option>
                <option value="gentlespoons">gentlespoons</option>
                <option value="ladles">ladles</option>
                <option value="partners">partners</option>
                <option value="neighbors">neighbors</option>
                <option value="shadows">shadows</option>
                <option value="ones">ones</option>
                <option value="twos">twos</option>
                <option value="same_roles">same roles</option>
                <option value="first_corners">first corners</option>
                <option value="second_corners">second corners</option>
                <option value="G1">gentlespoon 1</option>
                <option value="L1">ladle 1</option>
                <option value="G2">gentlespoon 2</option>
                <option value="L2">ladle 2</option>
              </select>
            </span>
            <span ng-if="p.ui == chooser_pair">
              <select ng-model="figure.parameter_values[$index]"
                      ng-change="user_changed_parameter(figure,$index)">
                <option value="gentlespoons">gentlespoons</option>
                <option value="ladles">ladles</option>
                <option value="ones">ones</option>
                <option value="twos">twos</option>
                <option value="first_corners">first corners</option>
                <option value="second_corners">second corners</option>
              </select>
            </span>
            <span ng-if="p.ui == chooser_pairz">
              <select ng-model="figure.parameter_values[$index]"
                      ng-change="user_changed_parameter(figure,$index)">
                <option value="gentlespoons">gentlespoons</option>
                <option value="ladles">ladles</option>
                <option value="partners">partners</option>
                <option value="neighbors">neighbors</option>
                <option value="shadows">shadows</option>
                <option value="ones">ones</option>
                <option value="twos">twos</option>
                <option value="same_roles">same roles</option>
                <option value="first_corners">first corners</option>
                <option value="second_corners">second corners</option>
              </select>
            </span>
            <span ng-if="p.ui == chooser_pairs">
              <select ng-model="figure.parameter_values[$index]"
                      ng-change="user_changed_parameter(figure,$index)">
                <option value="partners">partners</option>
                <option value="neighbors">neighbors</option>
                <option value="shadows">shadows</option>
                <option value="same_roles">same roles</option>
              </select>
            </span>
            <span ng-if="p.ui == chooser_dancer">
              <select ng-model="figure.parameter_values[$index]"
                      ng-change="user_changed_parameter(figure,$index)">
                <option value="G1">gentlespoon 1</option>
                <option value="L1">ladle 1</option>
                <option value="G2">gentlespoon 2</option>
                <option value="L2">ladle 2</option>
              </select>
            </span>
            <span ng-if="p.ui == chooser_role">
              <select ng-model="figure.parameter_values[$index]"
                      ng-change="user_changed_parameter(figure,$index)">
                <option value="gentlespoons">gentlespoons</option>
                <option value="ladles">ladles</option>
              </select>
            </span>
            <span ng-if="p.ui == chooser_hetero">
              <select ng-model="figure.parameter_values[$index]"
                      ng-change="user_changed_parameter(figure,$index)">
                <option value="partners">partners</option>
                <option value="neighbors">neighbors</option>
                <option value="shadows">shadows</option>
              </select>
            </span>
            <span ng-if="p.ui == chooser_text">
              <input type="text" ng-model="figure.parameter_values[$index]"
                     ng-change="user_changed_parameter(figure,$index)"/>
            </span>
            <span ng-if="p.ui == chooser_star_grip">
              <label>wrist grip <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="true" ng-change="user_changed_parameter(figure,$index)"/></label> /
              <label>hands across <input type="radio" ng-model="figure.parameter_values[$index]" ng-value="false" ng-change="user_changed_parameter(figure,$index)" /></label>
            </span>

          </span>
        </span>
      </div>
    </div>
    <div class="col-xs-12"> <%# dummy col to make row legal again  %>
      <hr />
      <%# Add/delete/rotate figure buttons %>
      <div class="row actions">
        <%= f.label :figures, class: "col-lg-1 col-md-2 col-xs-3" %>
        <div class="col-lg-11 col-md-10 col-xs-9">
          <div class="btn-group btn-group-justified btn-group-lg" role="group">
            <div class="btn-group">
              <button name="button" type="button" ng-click='addFigure()' class="btn btn-default"
                      title="add a new figure at the end of the list" 
                      aria-label="add a new figure at the end of the list">
                <%= plus_icon_html() %> Add Figure</button>
            </div>
            <div class="btn-group">
              <button name="button" type="button" ng-click='deleteFigure()' 
                      ng-show="figures.arr.length > 0" class="btn btn-default"
                      title="delete the last figure" 
                      aria-label="delete the last figure">
                <%= x_icon_html() %> Remove Figure</button>
            </div>
            <div class="btn-group">
              <button name="button" type="button" ng-click='rotateFigures()' 
                      ng-show="figures.arr.length >= 2" class="btn btn-default"
                      title="rotate figures, putting the last one first and bumping the rest down" 
                      aria-label="rotate figures, putting the last one first and bumping the rest down">
                <%= rotate_icon_html() %> Rotate Figures</button>
            </div>
          </div>
        </div>
      </div>

      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <%# drill in to debug with
          angular.element(document.getElementById('figures')).scope().figures.arr
          or
          angular.element(document.getElementById('figures')).scope().figures.arr[4].parameter_values %>
      <div class="row">
        
      </div>
    </div> <%# dummy col to make row legal again  %>
