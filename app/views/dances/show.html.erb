<% require 'json' %>

<div class="btn-group">
<%= copy_dance_button_html(@dance, label: "Copy") %>
<%= if (signed_in? && (current_user.id == @dance.user_id)) then
    edit_dance_button_html(@dance, label: "Edit") +
    delete_dance_button_html(@dance, label: "Delete")
    end %>
</div>



<h1><%= @dance.title %></h1>

<p>by: <strong><%= link_to @dance.choreographer.name, @dance.choreographer %></strong></p>
<%= render partial: 'bodyshow', locals: {dance: @dance} %>

<p>user: <%= link_to @dance.user.name, @dance.user %> </p>
