<% duts = Dut.where(tag: _tag, dance: dance) %>
<% zero_duts = 0 == duts.count %>
<% dut = duts.find_by(user: user) %>
<%= content_tag(:div, class: "tag-constellation", 'data-tag-id': _tag.id) do %>
  <%= content_tag(:span, '', class: "glyphicon #{_tag.glyphicon} #{dut ? '' : 'invisible'} #{_tag.bootstrap_color ? ('text-'+_tag.bootstrap_color) : ''}") %>
  <%= content_tag :span, _tag.name, class: "tag-label#{zero_duts ? ' tag-label-untagged' : ''}"  %>
  Ã— <%= content_tag :span, duts.count.to_s, class: 'tag-multiplier', 'data-other-user-count': duts.count - (dut ? 1 : 0) %>
  <%= tag(:input, {type: :checkbox, 'data-toggle': :toggle, checked: !zero_duts}.merge(_tag.bootstrap_color? ? {'data-onstyle': _tag.bootstrap_color} : {})) %>

<% end %>
