<% 
activities = activities_table
%>



<% if activities.length < 1 then %>
<p></p>
<% else %>
<table class="table table-striped table-bordered table-hover table-condensed contra-table-nonfluid">
  <thead>
  </thead>

  <tbody>
    <% activities.each do |activity| %>
      <tr>
        <td><%= activity.text %></td>
        <% if activity.dance 
             then %>         
             <td><%= link_to activity.dance.title, activity.dance %></td>
             <td><%= link_to activity.dance.choreographer.name, activity.dance.choreographer %></td>
             <td><%= link_to activity.dance.user.name, activity.dance.user %></td>
           <% else %>
             <td></td><td></td><td></td>
           <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>
